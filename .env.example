
# Configuración de Base de Datos PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos?schema=public
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/enfermeria_db?schema=public"

# Configuración del Servidor
PORT=3003
NODE_ENV=development

# Configuración de CORS (URL del frontend)
FRONTEND_URL="http://localhost:5173"

# Configuración de JWT (Autenticación)
# IMPORTANTE: Genera un secreto seguro para producción
# Puedes generar uno con: node -e "console.log(require("crypto").randomBytes(64).toString("hex"))"
JWT_SECRET="tu_secreto_jwt_super_seguro_aqui_cambiar_en_produccion"
JWT_EXPIRES_IN="24h"
